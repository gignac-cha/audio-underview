    "environment:generate": "pnpm --filter @audio-underview/environment-generator run generate"
  },
  "engines": {
    "node": ">=25.2.1"
  },
  "packageManager": "pnpm@10.26.1",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "turbo": "^2.7.0",
    "typescript": "^5.9.3",
    "wrangler": "^4.56.0"
  }
}
